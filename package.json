  "devDependencies": {
    "cssnano": "^7.0.6",
    "cssnano-preset-advanced": "^7.0.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-import-url": "^7.2.0",
    "postcss-url": "^10.1.3"
  }
}